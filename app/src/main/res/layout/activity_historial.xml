<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".historial"
    android:background="@drawable/re"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text=" Historial de pedido "
            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text=" Torta "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="30dp"
            android:text="descripcion: torta grande de asada"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="20dp"
            android:text="cantidad de producto: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="20dp"
            android:text=" Precio: 15 "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text=" Taco "
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/descripcion2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="30dp"
            android:text="descripcion: taco de asada de harina"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cantidad2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="20dp"
            android:text="cantidad de producto: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/precio2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="20dp"
            android:text=" Precio: 10"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text=" Refresco"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descripcion3"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="30dp"
            android:text="descripcion: refresco 1.5 sabor cola"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cantidad3"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="20dp"
            android:text="cantidad de producto: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/precio3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="20dp"
            android:text=" Precio: 20 "
            android:textColor="@color/black"
            android:textSize="15dp" />
        <Button
            android:id="@+id/regresar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="regresar a menu "
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>